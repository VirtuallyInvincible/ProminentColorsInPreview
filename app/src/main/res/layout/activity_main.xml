<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.shai_mahfud.cameraprominentcolors.view.CameraColorDistributionView
        android:id="@+id/activity_main_color_distribution"
        android:layout_width="@dimen/activity_main_color_distribution_width"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        />
    <SurfaceView
        android:id="@+id/activity_main_surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/activity_main_color_distribution"
        />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/pause"
        android:background="@android:color/transparent"
        android:layout_margin="16dp"
        />

</RelativeLayout>